generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["tracing", "metrics", "clientExtensions", "fieldReference", "fullTextIndex", "postgresqlExtensions"]
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(sequence(minValue: 1))

  web3AuthId String @db.String()

  firstName String?
  lastName  String?

  createdAt    DateTime          @default(now()) @db.Timestamptz()
  updatedAt    DateTime          @updatedAt @db.Timestamptz()
  OrderRequest TrainingRequest[]

  @@map("users")
}

model Model {
  id                Int             @id @default(sequence(minValue: 1))
  name              String
  description       String
  trainingRequestId Int
  trainingRequest   TrainingRequest @relation(fields: [trainingRequestId], references: [id])
}

model TrainingRequest {
  id      Int @id @default(sequence(minValue: 1))
  userId  Int
  modelId Int

  user  User    @relation(fields: [userId], references: [id])
  Model Model[]
}
